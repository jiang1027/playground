{
    "manifest_version": 3,
    "name": "Preview Plugin v1",
    "version": "0.0.0.1",
    "description": "Edge Extension for preview link",
    "icons": {
        "16": "icons/extension-icon16x16.png",
        "32": "icons/extension-icon32x32.png",
        "48": "icons/extension-icon48x48.png",
        "128": "icons/extension-icon128x128.png"
    },
    "action": {
        "default_title": "Preview Sidebar"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "contextMenus",
        "sidePanel",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
              "<all_urls>"
            ],
            "js": [
                "content-scripts/jquery-3.7.1.js",
                "content-scripts/content.js"
            ],
            "css": [
                "content-scripts/preview-frame.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/*.jpeg",
                "content-scripts/preview-frame.html"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "side_panel": {
        "default_path": "sidebar/sidebar.html"
    }
}
